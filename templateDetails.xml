<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.0" type="template" client="site">
	<name>gonko</name>
	<version>1.0</version>
	<creationDate>06/24/2013</creationDate>
	<author>Leonardo Alviarez</author>
	<authorEmail>alviarez.leonardo@gmail.com</authorEmail>
	<copyright>Leonardo Alviarez 2013</copyright>
	<license>GNU/GPL</license>
	<description>TPL_GONKO_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>debug</position>
		<position>position-0</position>
		<position>banner</position>
		<!-- <position>position-1</position> -->
		<position>yellow-bar-1</position>
		<position>yellow-bar-2</position>
		<position>yellow-bar-3</position>
		<position>yellow-bar-4</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_gonko.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_gonko.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#0088CC"
					label="TPL_GONKO_COLOR_LABEL"
					description="TPL_GONKO_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#FFFFFF"
					label="TPL_GONKO_BACKGROUND_COLOR_LABEL"
					description="TPL_GONKO_BACKGROUND_COLOR_DESC" />

				<field name="logoFile" class="" type="media" default=""
					label="TPL_GONKO_LOGO_LABEL"
					description="TPL_GONKO_LOGO_DESC" />
					
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group"
					default="1"
					label="TPL_GONKO_FONT_LABEL"
					description="TPL_GONKO_FONT_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_GONKO_FONT_NAME_LABEL"
					description="TPL_GONKO_FONT_NAME_DESC" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group"
					default="1"
					label="TPL_GONKO_FLUID_LABEL"
					description="TPL_GONKO_FLUID_DESC"
				>
					<option value="0">TPL_GONKO_STATIC</option>
					<option value="1">TPL_GONKO_FLUID</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
